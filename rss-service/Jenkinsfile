pipeline {
    agent any
    tools { 
        maven 'Maven 3.6.1'
        jdk 'jdk8' 
    }
    stages {
        stage ('Initialize') {
           steps {
               bat '''
                   echo "PATH = ${PATH}"
                   echo "MAVEN_HOME = ${MAVEN_HOME}"
              '''
       		}
		}
        stage('Build') {
            steps {
               	echo 'Building'
				echo 'Cleaning'			                
			    bat	'''cd rss-service 
			    		mvn clean'''		
				echo 'Compiling'		                
				bat	'''cd rss-service 
				mvn compile'''
               	echo 'Image'		                
				bat	'''cd rss-service 
				mvn install -DskipTests'''	
 	       }
        }
        stage('Test') {
            steps {
                echo 'Testing'
                bat '''
                	cd rss-service
                	mvn test
                '''
            }
        }
        stage('Run') {
            steps {
                echo 'Runnnig'
                bat '''cd rss-service 
                docker run -p 8180:8180 --name rss-service kpayares/rss-service:latest'''
            }
        }
    }
}